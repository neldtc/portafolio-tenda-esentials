---
import Layout from "src/layouts/Layout.astro"

import About from "src/components/About.astro"
import Experiences from "@/components/Experiences.astro"
import Home from "@/components/Home.astro"
import Projects from "@/components/Projects.astro"
import KeyboardManager from "@/components/KeyboardManager.astro"
---
<Layout title="Esentials Portfolio">
	<main>
		<h1>Esentials</h1>
	</main>
	<style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #000000;
    
        }
        header {
            text-align: center;
            background-color: #f2f2f2;
            padding: 10px;
        }
        h1 {
            padding: 10px;
            font-size: 75px;
            color: #FFFFFF; 
        }
        nav {
            text-align: center;
            margin: 10px 0;
            width: 170px;        }
        .navbar {
            overflow: hidden;
            background-color: #333;
            border: 5px solid white;
        }
        .navbar a {
            float: left;
            font-size: 16px;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }
        .navbar a:hover, .dropdown:hover .dropbtn {
            background-color: red;
        }
        .dropdown {
            float: left;
            overflow: hidden;
        }
        .dropdown .dropbtn {
            font-size: 25px;
            border: none;
            outline: 10px;
            color: white;
            padding: 14px 16px;
            background-color: inherit;
            font-family: inherit;
            margin: 0;
        }
        .navbar a, .dropdown-content a {
            float: none;
            display: block;
            text-align: left;
            font-size: 25px;
        }
        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #AAAAAA;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }
        .dropdown-content a {
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            text-align: left;
        }
        .dropdown-content a:hover {
            background-color: #000;
        }
        .dropdown:hover .dropdown-content {
            display: block;
        }
        .contenedor { display: flex;
        }
    </style>

	<Layout title="Esentials">
        <div class="contenedor">        <nav class="navbar">
			<a href="./src/components/Home.astro">Home</a>
			<a href="./src/components/Experiences.astro">Experiences</a>
			<a href="./src/components/About.astro">About</a>
            <a href="./src/components/Projects.astro">Projects</a>
        
			<div class="dropdown">
				<button class="dropbtn">Productos</button>
				<div class="dropdown-content">
					<a href="#">Mesas de son</a>
					<a href="#">Auriculares</a>
					<a href="#">Altafalantes</a>
				</div>
			</div>
		</nav>
        <img src="Imaxes/superlux-hd681-evo-white.jpg"
        width="400"
        height="400" />

    </div>

		<main>
            
			</main>
	<KeyboardManager />
	</Layout>